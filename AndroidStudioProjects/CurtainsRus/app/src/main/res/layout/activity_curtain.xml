<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurtainActivity"
    android:background="@drawable/curtains">


    <EditText
        android:id="@+id/WidthET"
        android:layout_width="187dp"
        android:layout_height="46dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="38dp"
        android:ems="10"

        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:text="width_in_feet"
        android:textColor="#000000"
        android:background="#228B22"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/HeightET"
        android:layout_width="194dp"
        android:layout_height="47dp"
        android:layout_marginTop="38dp"
        android:autofillHints=""
        android:ems="10"

        android:inputType="numberDecimal"
        android:text="height_in_feet"
        android:textColor="#000000"
        android:background="	#FFDF00"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/orderBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="22dp"
        android:text="order_it"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WidthET" />

    <Button
        android:id="@+id/cnclBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="105dp"
        android:layout_marginRight="105dp"
        android:text="cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HeightET" />


</androidx.constraintlayout.widget.ConstraintLayout>